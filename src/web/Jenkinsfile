@Library('pipeline-library')

Map tasks = [failFast: false]

tech = "nodejs"

tasks['x86'] = { ->
    node('master') {
        multiArchFlow('x86')
    }
}
tasks['arm'] = { ->
    node('master') {
        multiArchFlow('arm')
    }
}

def multiArchFlow(String arch) {
    checkout(tech)
    
    downloadTooling(tech)

    build(tech)
}